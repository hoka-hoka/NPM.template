{
  "name": "npm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "npm run scss && npm run autoprefixer",
    "scss": "node-sass --indent-type tab --output-style expanded src/sass/ -o dist/css/",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "build:js": "babel src/js --out-dir dist/js",
    "serve": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js'",
    "build:watch": "onchange \"src/sass/*.scss\" -- npm run build:css",
    "list": "npm-run-all build:css build:js",
    "build": "run-s list serve"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.12",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "uglify-js": "^3.10.1"
  }
}
